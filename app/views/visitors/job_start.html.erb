<section>
  <div class="col-lg-12">
    <div class="hero">
      <%= image_tag 'wundereel_logo.png' %>
      <h3>Highlight your life</h3>

    </div>
    <div class="text-center">
      <%= link_to new_jobs_create_path, { class: "btn btn-primary btn-lg"} do %>
        <%= image_tag "dropbox-logos_dropbox-glyph-white.png", { style: "height: 1em; width: 1em; display: inline;"} %>
        Sign in with Dropbox
      <% end %>
    </div>

    <div class="col-md-offset-3 col-md-6 col-sm-12">
      <div class="text-center" style="margin-top: 3em">
        <a href="#" data-toggle="modal" data-target="#email-signup-modal">Don't want to use Dropbox? Click here.</a>
      </div>
  </div>
</section>
<div class="modal fade" id="email-signup-modal">
  <div class="modal-dialog" role="document">
    <%= simple_form_for InterestedPerson.new,
      remote: true, format: :json, data: { success_url: email_signup_success_url } do |f| %>
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">

          <h5>Enter your email and we'll reach out with other options to submit your raw video</h5>
          <div class="form-group string interested_person_email">
            <label class="control-error-label">That email doesn't look right</label>
            <%= f.input_field :email,
              class: 'form-control',
              placeholder: "your.email@example.com",
              as: :string
            %>
          </div>
        </div>
        <div class="modal-footer">
          <div class="form-actions">
            <%= f.button :submit, "Let me know!", class: "btn btn-primary"  %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="email-signup-success hidden">
    <h3>Awesome. We'll reach out to you soon.</h3>
  </div>
</div>
