<!-- Facebook Conversion Code for Wunderload Launch Checkout Pixel -->
<script>
if( window.fbq ) {
  fbq('track', 'Purchase', {'value':'<%= revenue %>','currency':'USD'});
}
</script>
<% else %>
<script>
console.log({
  fbq: ['track', 'Purchase', {'value':'<%= revenue %>','currency':'USD'}],
  ga: ['ec:setAction', 'purchase', {          // Transaction details are provided in an actionFieldObject.
    'id': '<%= order_id %>',                         // (Required) Transaction id (string).
    'revenue': '<%= revenue %>'                     // Revenue (currency).
  }]
});
</script>
<% end %>
